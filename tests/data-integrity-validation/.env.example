# Environment Configuration for Data Integrity Validation
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_KEY=your_service_key_here

# Alternative: Use production URL for production validation
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your_supabase_service_key

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=./output/validation.log

# Validation Configuration
VALIDATION_MODE=full
SAMPLE_SIZE=100
ENABLE_ROLLBACK_TESTING=false

# Reporting Configuration
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
INCLUDE_CHARTS=true
REPORT_OUTPUT_DIR=./output

# Performance Monitoring
TRACK_QUERY_TIMES=true
TRACK_MEMORY_USAGE=true
QUERY_TIMEOUT_WARNING_MS=1000
MEMORY_USAGE_WARNING_MB=500

# Advanced Configuration
DEBUG=false
PARALLEL_VALIDATION=false
VALIDATION_TIMEOUT_MS=300000
MAX_RETRIES=3